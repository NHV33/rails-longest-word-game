  <div class="container p-5">
    <div class="d-flex flex-column flex-nowrap align-items-center justify-content-around">
      <div class="m-5 d-flex flex-row flex-nowrap align-items-center justify-content-around">
        <% @letters.each do |letter| %>
          <div class="bg-primary border shadow-sm letter text-white">
            <%= letter %>
          </div>
        <% end  %>
      </div>
        <form action="/score" method="post" data-turbo="false">
          <div class="input-group mb-3">
            <input type="text" name="word" class="form-control" placeholder="Spell a word from above letters." aria-label="New Word" aria-describedby="button-addon2">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">Play</button>
          </div>
          <%= hidden_field_tag 'letters', @letters %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        </form>

    </div>
  </div>
