  <div class="container p-5">
    <div class="d-flex flex-column flex-nowrap align-items-center justify-content-around">
      <div class="m-5 d-flex flex-row flex-nowrap align-items-center justify-content-around">
        <% @letters.each do |letter| %>
          <div class="bg-primary border shadow-sm letter text-white">
            <%= letter %>
          </div>
        <% end  %>
      </div>
        <form action="/score" method="post" data-turbo="false">
          <input type="text" name="word" placeholder="Type a word containing only letters above.">
          <input type="submit" value="Play">
          <%= hidden_field_tag 'arbys', 'VUBJKB23UIVI1UU1VOBVI@' %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        </form>
    </div>
  </div>
